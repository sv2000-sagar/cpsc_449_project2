{
    "$schema": "https://www.krakend.io/schema/v2.4/krakend.json",
    "version": 3,
    "endpoints": [
        {
    "@comment": "Register new user Endpoint" ,
            "endpoint": "/api/register",
            "method": "POST",
            "backend": [
                {
                "url_pattern": "/register",
                "method": "POST",
                "host": [
                    "http://localhost:5000"
                ],
                "extra_config": {
                    "backend/http": {
                        "return_error_details": "backend_alias"
                    }
                }
                }
            ]
        },
        {
    "@comment": "Login Endpoint" ,
            "endpoint": "/api/login",
            "method": "POST",
            "extra_config": {
                "auth/signer": {
                  "alg": "HS256",
                  "kid": "SECRETKEY",
                  "keys_to_sign": ["access_token", "refresh_token"],
                  "jwk_local_path": "users/share/symmetric.json",
                  "disable_jwk_security": true
                }
              },
            "backend": [
              {
                "url_pattern": "/login",
                "method": "POST",
                "host": ["http://localhost:5000"],
                "extra_config": {
                    "backend/http": {
                        "return_error_details": "backend_alias"
                    }
                }
              }
              
            ]
            
        },
        {
    "@comment": "List Available Classes" ,
            "endpoint": "/api/classes",
            "input_headers":[
                "authorization"
            ],
            "method": "GET",
            "extra_config": {
                "auth/validator": {
                    "alg": "HS256",
                    "jwk_local_path": "users/share/symmetric.json",
                    "roles": ["student"],
                    "roles_key": "roles",
                    "disable_jwk_security": true   
                }
            },
            "backend": [
                {
                "url_pattern": "/classes",
                "method": "GET",
                "host": [
                    "http://localhost:5100"
                ],
                "extra_config": {
                    "backend/http": {
                        "return_error_details": "backend_alias"
                    }
                }
                }
            ]
            },
                        {
                "@comment": "Enroll for Classes" ,
                        "endpoint": "/api/enrollments",
                        "input_headers":[
                            "authorization"
                        ],
                        "method": "POST",
                        "extra_config": {
                            "auth/validator": {
                                "alg": "HS256",
                                "jwk_local_path": "users/share/symmetric.json",
                                "roles": ["student"],
                                "roles_key": "roles",
                                "disable_jwk_security": true   
                            }
                        },
                        "backend": [
                            {
                            "url_pattern": "/enrollments/",
                            "method": "POST",
                            "host": [
                                "http://localhost:5100"
                            ],
                            "extra_config": {
                                "backend/http": {
                                    "return_error_details": "backend_alias"
                                }
                            }
                            }
                        ]
                        },
                        {
                "@comment": "Delete enrollment of student" ,
                            "endpoint": "/api/students/enrollments/{ClassId}",
                            "input_headers":[
                                "authorization"
                            ],
                            "method": "DELETE",
                            "extra_config": {
                                "auth/validator": {
                                    "alg": "HS256",
                                    "jwk_local_path": "users/share/symmetric.json",
                                    "roles": ["student"],
                                    "roles_key": "roles",
                                    "disable_jwk_security": true   
                                }
                            },
                            "backend": [
                                {
                                "url_pattern": "/students/enrollments/{ClassId}",
                                "method": "DELETE",
                                "host": [
                                    "http://localhost:5100"
                                ],
                                "extra_config": {
                                    "backend/http": {
                                        "return_error_details": "backend_alias"
                                    }
                                }
                                }
                            ]
                        },
                        {
                "@comment": "View Waiting List Position" ,
                            "endpoint": "/api/students/waiting-list/{ClassId}",
                            "input_headers":[
                                "authorization"
                            ],
                            "method": "GET",
                            "extra_config": {
                                "auth/validator": {
                                    "alg": "HS256",
                                    "jwk_local_path": "users/share/symmetric.json",
                                    "roles": ["student"],
                                    "roles_key": "roles",
                                    "disable_jwk_security": true   
                                }
                            },
                            "backend": [
                                {
                                "url_pattern": "/students/waiting-list/{ClassId}",
                                "method": "GET",
                                "host": [
                                    "http://localhost:5100"
                                ],
                                "extra_config": {
                                    "backend/http": {
                                        "return_error_details": "backend_alias"
                                    }
                                }
                                }
                            ]
                        },


                        {
                            "@comment": "Remove from Waiting List" ,
                                        "endpoint": "/api/students/waiting-list/{ClassId}",
                                        "input_headers":[
                                            "authorization"
                                        ],
                                        "method": "DELETE",
                                        "extra_config": {
                                            "auth/validator": {
                                                "alg": "HS256",
                                                "jwk_local_path": "users/share/symmetric.json",
