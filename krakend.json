                                                                "extra_config": {
                                                                    "auth/validator": {
                                                                        "alg": "HS256",
                                                                        "jwk_local_path": "users/share/symmetric.json",
                                                                        "roles": ["registrar"],
                                                                        "roles_key": "roles",
                                                                        "disable_jwk_security": true   
                                                                    }
                                                                },
                                                                "backend": [
                                                                    {
                                                                    "url_pattern": "/classes/{ClassId}/freeze-enrollment",
                                                                    "method": "PUT",
                                                                    "host": [
                                                                        "http://localhost:5100"
                                                                    ],
                                                                    "extra_config": {
                                                                        "backend/http": {
                                                                            "return_error_details": "backend_alias"
                                                                        }
                                                                    }
                                                                    }
                                                                ]
                                                            },
            

























        {
            "endpoint": "/api/users/",
            "method": "GET",
            "backend": [
                {
                "url_pattern": "/users/",
                "method": "GET",
                "host": [
                    "http://localhost:5000"
                ],
                "extra_config": {
                    "backend/http": {
                        "return_error_details": "backend_alias"
                    }
                }
                }
            ]
            },
            {
