                                    {
                                        "@comment": "Change Instructor for a Section" ,
                                                    "endpoint": "/api/classes/{ClassId}/instructor",
                                                    "input_headers":[
                                                        "authorization"
                                                    ],
                                                    "method": "PUT",
                                                    "extra_config": {
                                                        "auth/validator": {
                                                            "alg": "HS256",
                                                            "jwk_local_path": "users/share/symmetric.json",
                                                            "roles": ["registrar"],
                                                            "roles_key": "roles",
                                                            "disable_jwk_security": true   
                                                        }
                                                    },
                                                    "backend": [
                                                        {
                                                        "url_pattern": "/classes/{ClassId}/instructor",
                                                        "method": "PUT",
                                                        "host": [
